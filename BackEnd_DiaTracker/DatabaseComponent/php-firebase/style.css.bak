body{
    margin: 0;
    padding: 0;
    background:#fbcd08;
    background-size: cover;
    font-family: 'open sans',sans-serif;
}
/* Set the style of the box element that will contain the form */
.box{
	margin-top:100px;
    background: #1a1a1a;
    border-left: 10px solid #1a1a1a;
    border-right: 10px solid #1a1a1a;
    color: #fbcd08;
    top: 40%;
    left: 70%;
    position: absolute;
    transform: translate(-50%,-40%);
    box-sizing: border-box;
    padding: 55px 60px;
    border-radius: 10px;
}


/* Set the style of the user icon image element */
.user{
    width: 100px;
    height: 85px;
    position: absolute;
    top: -50px;
    left: calc(50% - 50px);
}
/* Set the style of the heading */
h1{
    margin: 0;
    padding: 0 0 50px;
    text-align: center;
    font-size: 28px;
    font-weight: 700;
    color: #fff;
}
/* Set the style of the labels */
p{
    color: #fbcd08;
    margin: 0;
    padding: 0;
    font-size: 21px;
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 700;
    margin-bottom: 10px;
}
/* Set the style of the input elements */
input{
    width: 100%;
    margin-bottom: 25px;
    padding: 10px;
}

/* Set the style of the text input, password input and email input */
input[type="text"], input[type="password"] ,input[type="email"]
{
    border: none;
    box-shadow: 0px 0px 15px -3px rgba(0,0,0,0.1);
    background: transparent;
    border-radius: 5px;
    outline: none;
    height: 30px;
    color: #EEE;
    font-size: 16px;
    font-weight: 600;
}

/* Set the style of the submit button */
input[type="submit"]
{
    font-weight: 600;
    border: none;
    outline: none;
    height: 40px;
    background: #fbcd08;
    color: #fff;
    font-size: 18px;
    border-radius: 20px;
    
}


/* Set the style of the submit button when hovered */
input[type=submit]:hover{
    box-shadow: 0 0 20px #fddd4e;
    color: #1a1a1a;
    transition: 400ms;
    cursor: pointer;
}
/* Set the style of the link */
a
{
    text-decoration: none;
    font-size: 16px;
    font-weight: 700;
    line-height: 20px;
    color: #069818;
}
.login:hover{
    transition: 200ms;
}
/* Set the style of the link when hovered */
a:hover
{
    color:#fbcd08;
}
.mainbox{
    position: absolute;
    top: 40%;
    left: 25%;
    transform: translate(-50%,-40%);
    box-sizing: border-box;
    padding: 55px 60px;
    border-radius: 8px;
}
.error {
    border: 1px solid #000;
    background-color: #000;
    padding: 10px;
    margin-bottom: 10px;
    color: #ffcc00;
    font-family: 'open sans', sans-serif;
    text-align: center;
    position: relative;
    
	z-index: 9999;
	margin-top: -20px;
}

@keyframes pulse {
    from {
        transform: scale(1);
    }
    to {
        transform: scale(1.1);
    }
}

.error:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to bottom, #ffcc00, #000);
    opacity: 0.3;
    z-index: -1;
}